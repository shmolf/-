{
  "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "declaration": true,
      "esModuleInterop": true,
      "baseUrl": "./",
      "outDir": "dist",
      "lib": ["esnext", "DOM"]
  },
  "exclude": ["dist/**/*"],
  "watchOptions": {
    "excludeDirectories": ["dist"]
  }
}
